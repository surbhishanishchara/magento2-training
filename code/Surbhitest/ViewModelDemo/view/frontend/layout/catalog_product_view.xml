<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name = "product.info.main">
            <block name = "delivery_message" class = "Magento\Framework\View\Element\Template"
            template = "Surbhitest_ViewModelDemo::delivery_message.phtml"
            before = "product.info.price">
                <arguments>
                    <argument name = "view_model" xsi:type="object">Surbhitest\ViewModelDemo\ViewModel\DeliveryMessage</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>