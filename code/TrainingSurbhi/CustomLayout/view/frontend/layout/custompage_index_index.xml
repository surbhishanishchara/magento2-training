<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="3columns" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">    
     <body>
        <referenceContainer name="sidebar.main">
            <block class="Magento\Cms\Block\Block" name="custom-page-layout-block-1">
                <arguments>
                    <argument name="block_id" xsi:type="string">static-block1</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="custom-page-layout-block-2">
                <arguments>
                    <argument name="block_id" xsi:type="string">static-block2</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="custom-page-layout-block-3">
                <arguments>
                    <argument name="block_id" xsi:type="string">static-block3</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>