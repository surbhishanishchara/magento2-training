<?php $collection = $block->getCarCollection(); ?>
<?php if($collection->count() > 0): ?>
    <?php if ($block->getPagerHtml()): ?>
        <div class="order-products-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php endif ?>
    <table class="data table" id="car-data-table">
        <caption class="table-caption">Car Data</caption>
        <thead>
            <tr>
                <th scope="col" class="col image">Image</th>
                <th scope="col" class="col carname">Car Name</th>
                <th scope="col" class="col companyname">Company Name</th>
                <th scope="col" class="col engine">Engine</th>
                <th scope="col" class="col carcolor">Car Color</th>
                <th scope="col" class="col actions">Action</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($collection as $key => $data): ?>
                <tr>
                    <td data-th="Image" class="col image">
                        <?php if($data->getImage()): ?>
                            <img width="70" height="70" src="<?php echo $block->getBaseUrl().'pub/media/car_image/'.$data->getImage(); ?>">
